<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".ProberSplashActivity">

    <TextView
        android:id="@+id/appTItle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/splashImg"
        android:layout_marginBottom="50dp"
        android:text="@string/app_name"
        android:visibility="gone"
        android:textAlignment="center"
        android:textSize="0sp"
        android:textColor="#FFF"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/splashImg"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/icon"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/splashButton"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@id/splashImg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textColor="#ffffff"
        android:background="@drawable/round_bg2"
        android:text="Start App"
        android:textSize="18sp"/>

    </RelativeLayout>


</RelativeLayout>
